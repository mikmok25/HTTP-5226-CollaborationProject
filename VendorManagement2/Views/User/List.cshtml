@model IEnumerable<VendorManagement2.Models.UserDto>

@{
    ViewBag.Title = "User List";
}

<h2 class="my-4">User List</h2>
<a href="@Url.Action("New", "User")" class="btn btn-primary mb-4">New User</a>


<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.UserID }, new { @class = "btn btn-warning btn-sm" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.UserID }, new { @class = "btn btn-info btn-sm" }) |
                    @Html.ActionLink("Delete", "DeleteConfirm", new { id = item.UserID }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>
